
@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    <div>
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <div class="userDetailsHldr">
                <span class="photoHldr">
                    <img src="@Url.Action("Show", "Image", new {  })" alt="" />
                </span><!-- //photoHldr -->
                <span class="dropdown">
                    <a class="namehldr dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="name">@User.Identity.GetUserName()</span>
                        <span class="fa fa-caret-down" aria-hidden="true"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            @Html.ActionLink("My profile", "Profile", "Account", routeValues: null, htmlAttributes: new { title = "Settings" })
                        </li>
                        <li>
                            @Html.ActionLink("Reset password", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                    </ul>
                </span>
            </div>
        }
    </div>
}
else
{
    <ul class="navbar-nav">
        <li>@Html.ActionLink("Log in", "Login", "Account")</li>
    </ul>
}
